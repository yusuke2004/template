<%= form_for @postdropdown do |f| %>

    <div class='form-group'>
        <%= f.label :ジャンル %>
        <%= f.collection_select :dropdown_id, Dropdown.all, :id, :name, include_blank: "ジャンルを選択してください" %>
    </div>

    <div class="field">
        <%= f.label :名前 %>
        <%= f.text_field :title, size: 30 %>
    </div>

    <div class="field">
        <%= f.label :内容 %>
        <%= f.text_field :body, size: 30 %>
    </div>

    <%= f.submit "編集する" %>
<% end %>

<%= link_to '← 戻る', request.referer || root_path %>
