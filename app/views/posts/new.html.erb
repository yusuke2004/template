<h1>(自分の題名)</h1>
<h3>新規投稿ページ</h3>
<%= form_for @post do |f| %>

    <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
    </div>
    
    <div class="field">
        <%= f.label :名前 %>
        <%= f.text_field :name, :size => 30 %>
    </div>


    <div class="field">
        <%= f.label :性別  %>
        <%= f.select :sex, 
        [["男", "男"], 
        ["女", "女"]], include_blank: "選択して下さい" %>
    </div>

    <div class="field">
        <%= f.label :年齢  %>
        <%= f.number_field :number, :size => 10 %>
    </div>

    <div class="field">
        <%= f.label :誕生日  %>
        <%= f.text_field :date, type: "date" %>
    </div>

    <div class="field">
        <%= f.label :プロフィール  %>
        <%= f.text_area :body, :size => "30x2" %>
    </div>

    <%= f.submit "投稿する" %>
    <% end %>

<%= link_to "一覧に戻る", posts_path %>